extends layout.pug

block content
    include includes/errors.pug
    form(action="/create-interesting" method="post")
        include includes/form-inputs.pug
        label(for="age") Age:
        input(type="number" id="age" name="age" value=age)
        label(for="favoriteBeatle") Choose Your Favorite Beatles Member:
        select(id="favoriteBeatle" name="favoriteBeatle")
            option(value="") --Please choose an option--
            option(value="John") John
            option(value="Paul") Paul
            option(value="Ringo") Ringo
            option(value="George") George
            option(value="Scooby-Doo") Scooby-Doo
        label(for="iceCream") Do you like Ice Cream?
        input(type="checkbox" id="iceCream" name="iceCream")
        input(type="submit" value="Create Interesting User")
